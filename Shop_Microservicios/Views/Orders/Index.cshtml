@model List<Shop_Microservicios.Models.Api.Orders.OrderResponse>

@{
    ViewData["Title"] = "Mis órdenes";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Mis órdenes</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <div style="font-size:2rem;">🧾</div>
                <h5 class="mt-2 mb-1">Aún no tienes órdenes</h5>
                <p class="text-muted mb-3">Cuando compres algo, tus órdenes aparecerán aquí.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    Ver productos
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:90px;">Id</th>
                            <th style="width:220px;">Fecha</th>
                            <th style="width:140px;">Total</th>
                            <th style="width:160px;">Estado</th>
                            <th class="text-end" style="width:220px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model)
                        {
                            var badgeClass =
                            o.Status == "PAID" ? "bg-success" :
                            o.Status == "CANCELLED" ? "bg-danger" :
                            "bg-warning text-dark";

                            <tr>
                                <td class="fw-semibold">#@o.Id</td>

                                <td class="text-muted">
                                    @o.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")
                                </td>

                                <td class="fw-semibold">
                                    @o.TotalAmount.ToString("C")
                                </td>

                                <td>
                                    <span class="badge @badgeClass" style="font-size:.9rem;">
                                        @o.Status
                                    </span>
                                </td>

                                <td class="text-end">
                                    <a asp-controller="Orders"
                                       asp-action="Details"
                                       asp-route-id="@o.Id"
                                       class="btn btn-sm btn-primary me-1">
                                        Ver
                                    </a>

                                    @* ✅ Cancelar solo si está PENDING *@
                                    @if (o.Status == "PENDING")
                                    {
                                        <form asp-controller="Orders"
                                              asp-action="Cancel"
                                              asp-route-id="@o.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('¿Cancelar esta orden?');">
                                                Cancelar
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
