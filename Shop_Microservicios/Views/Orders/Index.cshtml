@model List<Shop_Microservicios.Models.Api.Orders.OrderResponse>

<h2>Mis órdenes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt</td>
                <td>$@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a asp-controller="Orders"
                       asp-action="Details"
                       asp-route-id="@order.Id"
                       class="btn btn-sm btn-primary">
                        Ver
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
