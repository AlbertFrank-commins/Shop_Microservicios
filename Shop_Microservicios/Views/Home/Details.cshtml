@model Shop_Microservicios.Models.ViewModel.ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <!-- Imagen grande -->
        <div class="col-md-5 d-flex justify-content-center align-items-start">
            <img src="@Model.Thumbnail"
                 alt="@Model.Title"
                 class="img-fluid shadow-sm"
                 style="max-height: 350px; object-fit: contain;" />
        </div>

        <!-- Info del producto -->
        <div class="col-md-7">
            <h2>@Model.Title</h2>

            <h3 class="text-success fw-bold mt-2">
                @Model.Price.ToString("C")
            </h3>

            <div class="mb-2">
                ⭐ @Model.Rating.ToString("0.0") / 5
            </div>

            <p class="text-muted">
                @Model.Description
            </p>

            <p><strong>Categoría:</strong> @Model.Category</p>
            <p><strong>Marca:</strong> @Model.Brand</p>

            <hr />

            <!-- Cantidad + agregar al carrito -->
            <form asp-controller="Cart"
                  asp-action="Add"
                  method="post"
                  class="d-flex align-items-center gap-2 mt-3">

                <input type="hidden" name="productId" value="@Model.Id" />

                <label class="me-2 mb-0"><strong>Cantidad:</strong></label>
                <select name="quantity" class="form-select" style="width: 100px;">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>

                <button type="submit" class="btn btn-success">
                    Agregar al carrito
                </button>
            </form>

            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-outline-secondary mt-3">
                Volver al catálogo
            </a>
        </div>
    </div>

    <!-- ✅ Productos relacionados (Recommendation Service) -->
    <div class="mt-5">
        <h4 class="mb-3">Productos relacionados</h4>

        @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
        {
            <div class="row g-3">
                @foreach (var p in Model.RelatedProducts)
                {
                    <div class="col-6 col-md-3">
                        <div class="card h-100 shadow-sm">
                            <img src="@p.Thumbnail"
                                 class="card-img-top"
                                 alt="@p.Title"
                                 style="height: 160px; object-fit: contain;" />

                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">@p.Title</h6>
                                <div class="fw-bold text-success mb-2">
                                    @p.Price.ToString("C")
                                </div>

                                <a asp-controller="Home"
                                   asp-action="Details"
                                   asp-route-id="@p.Id"
                                   class="btn btn-primary btn-sm mt-auto">
                                    Ver detalles
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-light border">
                Aún no hay recomendaciones para este producto.
            </div>
        }
    </div>
</div>
