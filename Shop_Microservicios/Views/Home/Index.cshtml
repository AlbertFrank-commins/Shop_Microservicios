@model List<Shop.Web.Models.Api.ProductDto>

@{
    ViewData["Title"] = "Productos";
    var q = (string?)ViewBag.Query;
}

<div class="container mt-4">

    <div class="d-flex align-items-end justify-content-between mb-3">
        <div>
            <h2 class="mb-1">🛍️ Productos</h2>
            <p class="text-muted mb-0">Explora el catálogo y agrega al carrito.</p>
        </div>

        @if (!string.IsNullOrWhiteSpace(q))
        {
            <span class="badge bg-light text-dark border">
                Resultados para: <strong>@q</strong>
            </span>
        }
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="app-card p-4">
            <h5 class="mb-1">No hay productos para mostrar</h5>
            <p class="text-muted mb-0">Intenta quitar el filtro de búsqueda.</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var p in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="app-card h-100 p-3">

                        <div class="ratio ratio-1x1 mb-3" style="border-radius:14px; overflow:hidden;">
                            <img src="@p.Thumbnail" alt="@p.Title"
                                 style="width:100%; height:100%; object-fit:cover;" />
                        </div>

                        <div class="d-flex justify-content-between align-items-start">
                            <div class="me-2">
                                <div class="fw-semibold" style="line-height:1.2;">
                                    @p.Title
                                </div>
                                @if (!string.IsNullOrEmpty(p.Category))
                                {
                                    <small class="text-muted">@p.Category</small>
                                }
                            </div>

                            <span class="badge bg-warning text-dark fw-bold">
                                @p.Price.ToString("C")
                            </span>
                        </div>

                        <div class="d-grid mt-3">
                            <a asp-controller="Home"
                               asp-action="Details"
                               asp-route-id="@p.Id"
                               class="btn btn-accent">
                                Ver detalles
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>
