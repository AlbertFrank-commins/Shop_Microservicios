@model Shop_Microservicios.Models.ViewModels.Shipping.CreateShipmentViewModel
@{
    ViewData["Title"] = "Dirección de envío";
}

<div class="container mt-4">
    <div class="app-card p-4">
        <h3 class="mb-1">📦 Dirección de envío</h3>
        <p class="text-muted">Orden #@Model.OrderId</p>

        <form asp-controller="Shipping" asp-action="Create" method="post">
            <input type="hidden" asp-for="OrderId" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" asp-for="FirstName" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Apellido</label>
                    <input class="form-control" asp-for="LastName" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Correo</label>
                    <input class="form-control" asp-for="Email" type="email" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Ciudad</label>
                    <input class="form-control" asp-for="City" required />
                </div>

                <div class="col-md-8">
                    <label class="form-label">Dirección</label>
                    <input class="form-control" asp-for="Address" placeholder="Ej: Calle Principal #123, Verón" required />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Código postal</label>
                    <input class="form-control" asp-for="PostalCode" required />
                </div>
            </div>

            <button class="btn btn-primary w-100 mt-4" type="submit">
                Continuar a pago →
            </button>
        </form>
    </div>
</div>
 